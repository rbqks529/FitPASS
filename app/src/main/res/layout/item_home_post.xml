<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_home_post_edit"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_home_post_placeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핏블리짐"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@+id/iv_home_post_edit"
        app:layout_constraintStart_toEndOf="@+id/iv_home_post_edit"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_home_post_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중랑구 면목동"
        android:textSize="12sp"
        android:textColor="#8C8C8C"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@+id/iv_home_post_edit"
        app:layout_constraintStart_toEndOf="@+id/iv_home_post_edit"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="·"
        android:textSize="12sp"
        android:textColor="#8C8C8C"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@+id/tv_home_post_addr"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_post_addr"
        app:layout_constraintStart_toEndOf="@+id/tv_home_post_addr"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/tv_home_post_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="12sp"
        android:textColor="#8C8C8C"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@+id/iv_home_post_edit"
        app:layout_constraintStart_toEndOf="@+id/tv_home_post_addr"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일전"
        android:textSize="12sp"
        android:textColor="#8C8C8C"
        android:textStyle="normal"
        app:layout_constraintTop_toTopOf="@id/tv_home_post_time"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_post_time"
        app:layout_constraintStart_toEndOf="@+id/tv_home_post_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은 일수 : "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_post_addr"
        app:layout_constraintStart_toEndOf="@+id/iv_home_post_edit"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_home_post_restTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="340"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_post_addr"
        app:layout_constraintStart_toEndOf="@+id/iv_home_post_edit"
        android:layout_marginStart="75dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_post_addr"
        app:layout_constraintStart_toEndOf="@id/tv_home_post_restTime"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_home_post_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300,000"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_post_restTime"
        app:layout_constraintStart_toEndOf="@+id/iv_home_post_edit"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_post_restTime"
        app:layout_constraintStart_toEndOf="@id/tv_home_post_price"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_home_post_originalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12개월 60만원"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home_post_edit"
        android:layout_marginEnd="16dp"/>

    <View
        android:id="@+id/v_line"
        android:layout_width="327dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="#DBDBDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_home_post_edit" />





</androidx.constraintlayout.widget.ConstraintLayout>